{
  "name": "electron-quick-start",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "npx tailwindcss -i ./css/styles.css -o ./css/index.css --watch",
    "build": "rm -rf dist && electron-builder build --mac --publish never"
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "concurrently": "^8.0.1",
    "electron": "^16.0.6",
    "electron-builder": "^22.14.5"
  },
  "dependencies": {
    "animejs": "^3.2.1",
    "electron-reload": "^2.0.0-alpha.1",
    "tailwindcss": "^3.0.11"
  },
  "build": {
    "productName": "In Excess of Playtime",
    "copyright": "Copyright Â© 2022 Michael Ray-Von",
    "files": [
      "node_modules/**/*",
      "assets/**/*",
      "css/index.css",
      "renderer.js",
      "main.js",
      "preload.js",
      "index.html"
    ]
  }
}
